<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubActivity3"
    android:background="#FFFACC">

    <TextView
        android:textColor="@color/black"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_timepicker"
        android:layout_centerHorizontal="true"


        android:layout_marginTop="200dp"
        android:text="알람 없음"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:textColor="@color/black"
        android:id="@+id/button_timepicker"
        android:layout_width="102dp"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="알람 설정"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.101" />

    <Button
        android:textColor="@color/black"
        android:id="@+id/button_cancel"
        android:layout_width="100dp"
        android:layout_height="56dp"
        android:layout_below="@+id/button_timepicker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="알람 끄기"
        app:layout_constraintEnd_toEndOf="@+id/button_timepicker"
        app:layout_constraintStart_toStartOf="@+id/button_timepicker"
        app:layout_constraintTop_toBottomOf="@+id/button_timepicker" />

    <Button
        android:textColor="@color/black"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="지도 보러가기"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.819"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/agrroa"/>

    <Button
        android:textColor="@color/black"
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/agrroa"
        android:text="로그아웃"
        android:onClick="btn_logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />


</androidx.constraintlayout.widget.ConstraintLayout>